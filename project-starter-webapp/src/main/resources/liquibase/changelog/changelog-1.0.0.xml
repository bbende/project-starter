<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

    <changeSet id="1" author="bbende">
        <createSequence sequenceName="sequence_generator" startValue="1000" incrementBy="1"/>
    </changeSet>

    <changeSet id="2" author="bbende">
        <createTable tableName="user">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(50)">
                <constraints nullable="false"
                             unique="true"
                             uniqueConstraintName="uk_user__username"/>
            </column>
            <column name="password_hash" type="varchar(60)">
                <constraints nullable="false" />
            </column>
            <column name="email" type="varchar(191)">
                <constraints nullable="false"
                             unique="true"
                             uniqueConstraintName="uk_user__email"/>
            </column>
            <column name="first_name" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="last_name" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="activated" type="boolean" valueBoolean="false">
                <constraints nullable="false" />
            </column>
            <column name="created" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="authority">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"
                             unique="true"
                             uniqueConstraintName="uk_authority__name"/>
            </column>
        </createTable>

        <createTable tableName="user_authority">
            <column name="user_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_user_authority__user_id"
                             referencedColumnNames="id"
                             referencedTableName="user"
                             deleteCascade="true" />
            </column>
            <column name="authority_id" type="varchar(50)">
                <constraints nullable="false"
                             foreignKeyName="fk_user_authority__authority_id"
                             referencedColumnNames="id"
                             referencedTableName="authority"
                             deleteCascade="true" />
            </column>
        </createTable>

        <addPrimaryKey tableName="user_authority" columnNames="user_id, authority_id" />

        <loadData tableName="user" file="liquibase/data/user.csv" separator=";">
            <column name="id" type="numeric"/>
            <column name="activated" type="boolean"/>
            <column name="created_date" type="timestamp"/>
        </loadData>

        <loadData tableName="authority" file="liquibase/data/authority.csv" separator=";">
            <column name="id" type="numeric"/>
            <column name="name" type="string"/>
        </loadData>

        <loadData tableName="user_authority" file="liquibase/data/user_authority.csv" separator=";">
            <column name="user_id" type="numeric"/>
        </loadData>
    </changeSet>

    <changeSet id="3" author="bbende">
        <createTable tableName="person">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" primaryKeyName="person_id_pk" />
            </column>
            <column name="first_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="event">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" primaryKeyName="event_id_pk" />
            </column>
            <column name="person_id" type="varchar(50)">
                <constraints foreignKeyName="event_person_fk"
                             referencedTableName="person"
                             referencedColumnNames="id"
                             deleteCascade="true"/>
            </column>
            <column name="title" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>